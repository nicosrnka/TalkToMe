<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    tools:context=".activities.AddCaregiver">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:shrinkColumns="0">

        <TableRow>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" Zum Aktivieren der SmartView (Hisense)"
        tools:fontFamily="sans-serif-condensed-medium"
        tools:textStyle="bold"
        tools:textSize="24dp"
        />
    </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/First_Element"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1. Zum Aktivieren der Smart View laden Sie bitte folgende App im Google Play Store hinunter: Smart View TV All Share Cast und Video TV cast."
                tools:textSize="24dp" />
        </TableRow>
        <TableRow>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="98dp"
                android:src="@drawable/smartviewapplogo"
                tools:layout_editor_absoluteX="142dp"
                tools:layout_editor_absoluteY="142dp" />
        </TableRow>
        <TableRow>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2. Schalten Sie nun den Fernsehen ein"
            tools:textSize="24dp" />
        </TableRow>
        <TableRow>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3. Drücken Sie nun auf den Home-Button wie unten \n angezeigt:"
                tools:textSize="24dp" />
        </TableRow>

        <TableRow android:layout_width="278dp">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/homebutton"
                tools:layout_editor_absoluteX="142dp"
                tools:layout_editor_absoluteY="142dp" />
        </TableRow>
        <TableRow>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4. Danach gehen Sie auf das Tür Symbol (unten links), wie in der Abbildung angezeigt, und wechseln Sie dann in die Anyview Cast. Dadurch ist Ihr Hisense Fernseher dann bereit für den Smart View Share."
                tools:textSize="24dp" />
        </TableRow>
        <TableRow>
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            tools:layout_editor_absoluteX="142dp"
            tools:layout_editor_absoluteY="142dp"
            android:src="@drawable/tuer"/>
        </TableRow>
        <TableRow>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5. Danach wechseln Sie in die App, die Sie vorher hinuntergeladen haben. Drücken Sie in der App auf den Startknopf(wie unten in der Abbildung)"
                tools:textSize="24dp" />
        </TableRow>
        <TableRow>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="68dp"
            android:src="@drawable/startbutton"
            tools:layout_editor_absoluteX="142dp"
            tools:layout_editor_absoluteY="142dp" />
        </TableRow>
        <TableRow>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="6. Danach befinden Sie sich im Hauptfenster der App."
            tools:textSize="24dp" />
        </TableRow>
        <TableRow>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="162dp"
            android:src="@drawable/mainsmartview"
            tools:layout_editor_absoluteX="142dp"
            tools:layout_editor_absoluteY="142dp" />
        </TableRow>
        <TableRow>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="7. Dannach wählen Sie Ihren Fernseher aus und klicken Sie darauf. Daraufhin wird sich das Handy mit dem Smart TV verbinden. Bitte achten Sie darauf, dass Handy und Smart TV mit dem gleichen Netzwerk verbunden sind. "
                tools:textSize="24dp" />
        </TableRow>
        <TableRow>
        <ImageView
            android:layout_width="393dp"
            android:layout_height="128dp"
            android:src="@drawable/verfuegbaregeraete"
            tools:layout_editor_absoluteX="142dp"
            tools:layout_editor_absoluteY="142dp" />
        </TableRow>
        <TableRow>
        <TextView />
        </TableRow>
    </TableLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>